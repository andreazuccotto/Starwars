<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="it.starwars.bean.Utente" table="UTENTI">
        <id name="username" type="string">
            <column name="USERNAME" length="30"/>
        </id>
        <property name="password" type="string">
            <column name="PASSWORD" length="30"/>
        </property>
        <property name="attivo" type="boolean">
            <column name="ATTIVO" />
        </property>
        <property name="tipoUtente" type="integer">
            <column name="TIPO_UTENTE" />
        </property>
        <property name="dataRegistrazione" type="date">
            <column name="DATA_REGISTRAZIONE" />
        </property>
        <property name="dataUltimoAccesso" type="date">
            <column name="DATA_ULTIMO_ACCESSO" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="30"/>
        </property>
    </class>
</hibernate-mapping>